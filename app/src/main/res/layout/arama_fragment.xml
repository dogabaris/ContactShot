<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bigapps.doga.contactshot.MainActivity">

    <info.hoang8f.widget.FButton
    fontPath="fonts/beyond_the_mountains.ttf"
    fbutton:buttonColor="@color/ColorPrimary"
    fbutton:shadowColor="@color/ColorPrimaryDark"
    fbutton:shadowEnabled="true"
    fbutton:shadowHeight="5dp"
    fbutton:cornerRadius="5dp"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:text="@string/RandomKisi"
    android:id="@+id/mrandomara_btn"
    android:layout_marginBottom="144dp"
    android:textColor="#ffffff"
    android:textSize="20sp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textAllCaps="false"/>

    <info.hoang8f.widget.FButton
    fontPath="fonts/beyond_the_mountains.ttf"
    fbutton:buttonColor="@color/ColorPrimary"
    fbutton:shadowColor="@color/ColorPrimaryDark"
    fbutton:shadowEnabled="true"
    fbutton:shadowHeight="5dp"
    fbutton:cornerRadius="5dp"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:text="@string/ara"
    android:id="@+id/ara_btn"
    android:textColor="#ffffff"
    android:textSize="20sp"
    android:layout_alignTop="@+id/mrandomara_btn"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="51dp"
    android:textAllCaps="false"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/kisi"
        android:id="@+id/contact_tv"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/numara"
        android:id="@+id/number_tv"
        android:textAlignment="center"
        android:layout_below="@+id/contact_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

</RelativeLayout>